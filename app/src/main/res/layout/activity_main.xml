<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0A38383"
    android:onClick="OnClickGoMAin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="739dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="415dp"
                android:layout_height="305dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.501"
                app:srcCompat="@drawable/andryxaev" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginLeft="20dp"
                android:text="Хусен Борежевич Андрухаев (2 марта 1920 — 8 ноября 1941) — адыгейский советский журналист, поэт, Герой Советского Союза посмертно. Политрук роты 733-го стрелкового полка 136-й стрелковой дивизии 18-й армии Южного фронта, младший политрук."
                android:textColor="@color/white" />

            <Button

                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="261dp"
                android:onClick="OnClickGoMain"
                android:text="Подробнее"
                app:cornerRadius="25dp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>